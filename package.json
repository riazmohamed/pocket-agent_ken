{
  "name": "pocket-agent",
  "version": "1.0.0",
  "description": "Desktop AI agent with persistent memory powered by Claude Agent SDK",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "tsc && electron .",
    "watch": "tsc -w",
    "electron": "electron .",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "rebuild:native": "CXX='clang++ -std=c++20' CXXFLAGS='-std=c++20' electron-rebuild -f -w better-sqlite3",
    "postinstall": "CXX='clang++ -std=c++20' CXXFLAGS='-std=c++20' electron-rebuild -f -w better-sqlite3",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.12",
    "better-sqlite3": "^12.6.2",
    "city-timezones": "^1.3.3",
    "grammy": "^1.31.0",
    "node-cron": "^3.0.3",
    "openai": "^6.16.0",
    "puppeteer-core": "^23.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.10.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "electron": "^40.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "optionalDependencies": {
    "node-pty": "^1.1.0"
  }
}
